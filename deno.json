{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "tasks": {
    "start": "deno run -A --watch=src/static/,src/routes/ src/dev.ts"
  },
  "importMap": "./src/import_map.json",
  "lint": {
    "files": {
      "include": ["routes/", "utils/", "islands/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["routes/", "utils/", "islands/"]
    },
    "options": {
      "useTabs": true,
      "indentWidth": 4,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}
